{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@user/*": ["./user/*"],
      "@auth/*": ["./auth/*"],
      "@shared/*": ["./shared/*"],
      "@product/*": ["./product/*"],
      "@store/*": ["./store/*"],
      "@utils/*": ["./utils/*"],
      "@category/*": ["./category/*"],
      "@cart/*": ["./cart/*"],
      "@order/*": ["./order/*"],
      "@review/*": ["./review/*"]
    }
  },
  "exclude": [
    "node_modules",
    "src/discount/**",
    "src/payment/**",
    "src/shipment/**",
    "src/tag/**"
  ],
  "include": ["**/*.ts", "**/*.tsx", "src/*"]
}
